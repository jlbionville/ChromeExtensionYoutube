
{
  "manifest_version": 3,
  "name": "YouTube Info to Obsidian",
  "version": "1.0",
  "description": "Extract YouTube video info and copy/export to Markdown or JSON.",
  "permissions": ["scripting", "tabs", "activeTab", "clipboardWrite", "contextMenus", "commands"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_title": "YouTube to Obsidian",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "commands": {
    "trigger-content-script": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Lancer l'extraction YouTube"
    }
  }
}
